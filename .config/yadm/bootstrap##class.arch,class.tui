#!/bin/sh
set -e
# ====================================
# Install packages
# ====================================

script_path=`( cd "$(dirname "$0")" && pwd -P )`

sudo pacman -S --noconfirm --needed \
    ranger unzip \
    openssh pacman-contrib fakeroot \
	zoxide fzf

# ranger plugins
if [ ! -d ~/.config/ranger/plugins/zoxide ]; then
    git clone https://github.com/jchook/ranger-zoxide.git ~/.config/ranger/plugins/zoxide
else
    git -C ~/.config/ranger/plugins/zoxide pull
fi

if [ ! -d ~/.config/ranger/plugins/ranger_tmux ]; then
    git clone https://github.com/joouha/ranger_tmux.git ~/.config/ranger/plugins/ranger_tmux
else
    git -C ~/.config/ranger/plugins/ranger_tmux pull
fi

# tmux plugins
if [ ! -d ~/.config/tmux/tmux-net-speed ]; then
    git clone https://github.com/wfxr/tmux-net-speed.git ~/.config/tmux/tmux-net-speed
else
    git -C ~/.config/tmux/tmux-net-speed pull
fi

if [ ! -d ~/.config/tmux/tmux-prefix-highlight ]; then
    git clone https://github.com/tmux-plugins/tmux-prefix-highlight.git ~/.config/tmux/tmux-prefix-highlight
else
    git -C ~/.config/tmux/tmux-prefix-highlight pull
fi

if pacman -Qs paru > /dev/null ; then
    echo "Paru is already installed, moving on..."
else
    mkdir -p ~/sources/compiled_from_source
    cd ~/sources/compiled_from_source
    rm -rf paru-bin
    git clone https://aur.archlinux.org/paru-bin.git
    cd paru-bin
    makepkg -si --noconfirm
    cd ~
fi

paru -S --needed --noconfirm \
    nvim-packer-git \
    pacman-cleanup-hook bat btop

# ====================================
# oh-my-zsh
# ====================================
yes | sh -c "$(wget -O- https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
git clone https://github.com/zsh-users/zsh-autosuggestions ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions

cd $script_path
for theme in `ls *.zsh-theme`; do
	ln -sr ~/.config/yadm/$theme ~/.oh-my-zsh/custom/themes/$theme
done
mkdir -p ~/.oh-my-zsh/custom/plugins/elapsed-time
ln -sr ~/.config/yadm/elapsed-time.plugin.zsh ~/.oh-my-zsh/custom/plugins/elapsed-time/.

if [[ -f ~/.zshrc.pre-oh-my-zsh ]]; then
	rm ~/.zshrc
	mv ~/.zshrc.pre-oh-my-zsh ~/.zshrc
fi
sudo chsh -s /bin/zsh ${USER}

# ====================================
# Yazi
# ====================================
sudo pacman -S --noconfirm yazi ffmpegthumbnailer p7zip jq poppler fd ripgrep fzf zoxide imagemagick
mkdir -p ~/.config/yazi

# flavors (i.e. themes)
ya pkg add dangooddd/kanagawa
ya pkg add Chromium-3-Oxide/everforest-medium

# plugins
ya pkg add yazi-rs/plugins:full-border
ya pkg add yazi-rs/plugins:git
ya pkg add yazi-rs/plugins:chmod
ya pkg add yazi-rs/plugins:mime-ext

# ====================================
# Other programs
# ====================================
xargs -a program_list sudo pacman -S --noconfirm

echo "=============="
echo "==== DONE ===="
echo "=============="
